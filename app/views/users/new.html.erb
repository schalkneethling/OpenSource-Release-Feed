<h1><%= @metadata.title %></h1>
<% @user.password = @user.password_confirmation = nil %>
<%= @metadata.content %>
<%= error_messages_for :user %>
<% form_for :user, :url => users_path, :html => {:id => 'register'} do |f| -%>
<fieldset class="shaded_fieldset">
	<legend>Create Your Account</legend>
	<%= label_tag 'login' %><br/>
	<%= f.text_field :login, :class => 'required' %><br/>
	
	<%= label_tag 'email' %><br/>
	<%= f.text_field :email, :class => 'required' %><br/>
	
	<%= label_tag 'password' %><br/>
	<%= f.password_field :password, :class => 'required' %><br/>
	
	<%= label_tag 'password_confirmation', 'Confirm Password' %><br/>
	<%= f.password_field :password_confirmation, :class => 'required' %><br/>
	
	<%= recaptcha_tags(:public_key => RECAPTCHA_PUBLIC_KEY) %>
	
	<%= submit_tag 'create account', :class => 'custom_button_no_float' %>
</fieldset>
<% end -%>
