<h1>Add Article Draft</h1>
<%= render :partial => 'components/notification' %>
<%= error_messages_for 'article' %>
<% form_for :article, :html => { :multipart => true, :id => 'newarticle'} do |f| %>
	<fieldset class="shaded_fieldset">
		<legend>Article Details</legend>
		<label for="article_title">Title: (Required)</label><br />
		<%= f.text_field :title, :class => 'required', :size => '70' %><br />
		
		<label for="article_lead">Article Lead: (Required)</label><br />
		<%= f.text_area :lead, :class => 'required wmd-ignore', :size => '70x5' %><br />
		
		<label for="article_detail">Article: (Required)</label><br />
		<%= f.text_area :detail, :size => "70x10", :minlength => '50' %><br />
		
		<label for="article_tag">Article Tag: (Required)</label><br />
		<%= f.text_field :tag, :class => 'required', :size => '70' %><br />
		
		<label for="article_photo">Photo: (Required)</label><br />
		<%= f.file_field :photo %><br />
	</fieldset>
	<%= submit_tag 'submit article', :class => 'custom_button' %>
<% end %>